<!-- hero section -->
<section class="hero">
  <div class="container mx-auto flex items-center py-20">
    <!-- left wrapper -->
    <div class="left-wrapper w-1/2">
      <em><h6 class="text-lg">Are you Hungry?</h6></em>
      <h1 class="font-bold text-7xl my-2">Don't Wait ...</h1>
      <button class="hero-btn text-white font-bold py-2 px-4 my-5 rounded-full">
        Order Now
      </button>
    </div>
    <!-- right wrapper -->
    <div class="right-wrapper w-1/2">
      <img src="./img/hero-pizza.png" alt="pizza" />
    </div>
  </div>
</section>

<!-- menu section -->
<section class="menu container mx-auto py-8">
  <h1 class="text-3xl font-bold mb-8">All Pizza</h1>

  <div class="grid grid-cols-4 gap-x-12 gap-y-16">
    <% pizzas.forEach( (pizza) => { %>
    <div class="w-64">
      <img class="h-40 mb-4 mx-auto" src="./img/<%= pizza.image %>" alt="pizza" />
      <div class="text-center">
        <h1 class="mb-4 text-lg"><%= pizza.name %></h1>
        <span class="size py-1 px-4 uppercase rounded-full text-xs"><%= pizza.size %></span>
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">Rs  <%= pizza.prize %></span>
          <button
            class="
              add-to-cart
              py-1
              px-6
              rounded-full
              flex
              items-center
              font-bold
            "
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
