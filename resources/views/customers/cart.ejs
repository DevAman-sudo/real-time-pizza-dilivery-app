<section class="cart">

  <% if (session.cart) { %>
  <!-- cart section -->
  <div class="cart-stuffs">
    <div class="summary container flex mx-auto py-8 px-12 items-center">
      <i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
      <h1 class="ml-3 font-bold text-1xl">Order Summary</h1>
    </div>

    <% for(let pizza of Object.values(session.cart.items)) { %>
    <div class="cart-shop container mt-4 mb-4 flex mx-auto justify-between items-center">
      <div class="flex items-center">
        <img class="cart-pizz" src="./img/<%= pizza.items.image %>" alt="pizza" />
        <div>
          <h1 class="mb-4 font-bold text-lg text-lg"><%= pizza.items.name %></h1>
          <span class="size py-1 px-4 uppercase rounded-full text-xs"
            ><%= pizza.items.size %></span
          >
        </div>
      </div>
      <span class="text-lg"><%= pizza.qty %> Pcs</span>
      <span class="font-bold text-lg">Rs <%= pizza.items.prize * pizza.qty %></span>
    </div>
    <% } %>

  </div>

    <!-- address bar -->
  <div class="container text-right py-4">
    <div>
      <span class="text-lg font-bold">Total Amount:</span>
      <span class="amount font-bold text-2xl ml-2">Rs <%= session.cart.totalPrice %></span>
    </div>
    <!-- form -->
    <div>
      <form action="" class="mt-12">
        <input class="border border-grey-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
        <input class="border border-grey-400 p-2 w-1/2" type="text" placeholder="Address">
        <div>
          <!-- <button class="hero-btn px-6 py-4 text-white rounded-full font-bold mt-6" type="submit">Order Now</button> -->
        </div>
      </form>
    </div>
    <a href="" class="inline-block cursur-pointer hero-btn px-6 py-4 text-white rounded-full font-bold mt-6">login to continue</a>
  </div>

  <% } else { %>

  <!-- empty cart section -->
  <div class="empty-cart py-20">
    <div
      class="container mx-auto text-center flex items-center justify-between"
    >
      <div>
        <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜ƒ</h1>
        <p class="text-gray-500 text-lg mt-12">
          You probably havent't ordered a pizza yet. <br />
          to order a pizza, go to the main page.
        </p>
      </div>
      <div>
        <img class="w-3/5 mx-auto" src="./img/cart-basket.png" alt="cart" />
        <a
          href="/"
          class="
            inline-block
            px-6
            py-2
            rounded-full
            font-bold
            hero-btn
            text-white
            mt-12
          "
          >Go Back</a
        >
      </div>
    </div>
  </div>
  <% } %>

</section>
